<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOG_FILE" value="demo"/>
    <property scope="context" name="LOG_HOME" value="temp"/>
    <springProperty scope="context" name="LOG_HOME" source="log.home"/>
    <property name="PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger.%M:%L - %msg%n"/>

    <!-- 日志定义 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${LOG_FILE}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${LOG_FILE}.%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxHistory>180</maxHistory>
            <maxFileSize>10MB</maxFileSize>
            <totalSizeCap>20GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 异步INFO日志定义 -->
    <appender name="SYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
        <includeCallerData>true</includeCallerData>
    </appender>

    <!-- INFO日志定义 -->
    <appender name="INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${LOG_FILE}.info.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${LOG_FILE}.info.%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxHistory>180</maxHistory>
            <maxFileSize>10MB</maxFileSize>
            <totalSizeCap>20GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 异步INFO日志定义 -->
    <appender name="SYNC_INFO" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="INFO"/>
        <includeCallerData>true</includeCallerData>
    </appender>

    <!-- ERROR日志定义 -->
    <appender name="ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${LOG_FILE}.error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${LOG_FILE}.error.%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxHistory>180</maxHistory>
            <maxFileSize>10MB</maxFileSize>
            <totalSizeCap>20GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 异步ERROR日志定义 -->
    <appender name="SYNC_ERROR" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ERROR"/>
        <includeCallerData>true</includeCallerData>
    </appender>

    <!-- DEBUG日志定义 -->
    <appender name="DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${LOG_FILE}.debug.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${LOG_FILE}.debug.%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxHistory>180</maxHistory>
            <maxFileSize>10MB</maxFileSize>
            <totalSizeCap>20GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 异步DEBUG日志定义 -->
    <appender name="SYNC_DEBUG" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="DEBUG"/>
        <includeCallerData>true</includeCallerData>
    </appender>

    <!-- 定义控制台日志信息 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 包路径缩写 -->
            <pattern>%red(%d{yyyy-MM-dd HH:mm:ss}) %green([%thread]) %highlight(%-5level) %boldMagenta(%logger{10}).%M:%L - %msg%n</pattern>
            <!-- 包路径不缩写 -->
            <!-- <pattern>%red(%d{yyyy-MM-dd HH:mm:ss}) %green([%thread]) %highlight(%-5level) %boldMagenta(%logger).%M:%L - %msg%n</pattern> -->
        </encoder>
    </appender>

    <!-- 定义异步控制台日志信息 -->
    <appender name="SYNC_STDOUT" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="STDOUT"/>
        <includeCallerData>true</includeCallerData>
    </appender>

    <!-- 定义控制台打印JDBC信息 -->
    <appender name="JDBC" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 包路径缩写 -->
            <pattern>%red(%d{yyyy-MM-dd HH:mm:ss}) %green([%thread]) %yellow(%-5level) %boldMagenta(%logger{10}).%M:%L - %yellow(%msg%n)</pattern>
            <!-- 包路径不缩写 -->
            <!-- <pattern>%red(%d{yyyy-MM-dd HH:mm:ss}) %green([%thread]) %yellow(%-5level) %boldMagenta(%logger).%M:%L - %yellow(%msg%n)</pattern> -->
        </encoder>
    </appender>

    <!-- 定义异步控制台打印JDBC信息 -->
    <appender name="SYNC_JDBC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="JDBC"/>
        <includeCallerData>true</includeCallerData>
    </appender>

    <root level="INFO">
        <appender-ref ref="SYNC_STDOUT"/>
    </root>
    <logger name="com.oven.demo.core" level="INFO" additivity="false">
        <appender-ref ref="SYNC_STDOUT"/>
        <appender-ref ref="SYNC_FILE"/>
    </logger>
    <logger name="com.oven.demo.framework.exception" level="ERROR" additivity="false">
        <appender-ref ref="SYNC_ERROR"/>
        <appender-ref ref="SYNC_STDOUT"/>
    </logger>
    <logger name="com.oven.demo.framework.aop" level="INFO" additivity="false">
        <appender-ref ref="SYNC_INFO"/>
        <appender-ref ref="SYNC_STDOUT"/>
    </logger>
    <logger name="com.oven.demo.framework.limitation" level="INFO" additivity="false">
        <appender-ref ref="SYNC_INFO"/>
        <appender-ref ref="SYNC_STDOUT"/>
    </logger>
    <logger name="com.oven.demo.core.task" level="INFO" additivity="false">
        <appender-ref ref="SYNC_INFO"/>
        <appender-ref ref="SYNC_STDOUT"/>
    </logger>
    <logger name="com.oven.demo.framework.limitation" level="ERROR" additivity="false">
        <appender-ref ref="SYNC_ERROR"/>
        <appender-ref ref="SYNC_STDOUT"/>
    </logger>
    <logger name="org.springframework.jdbc.core" level="DEBUG" additivity="false">
        <appender-ref ref="SYNC_JDBC"/>
        <appender-ref ref="SYNC_DEBUG"/>
    </logger>
    <logger name="org.springframework.jdbc.core.StatementCreatorUtils" level="TRACE" additivity="false">
        <appender-ref ref="SYNC_JDBC"/>
        <appender-ref ref="SYNC_DEBUG"/>
    </logger>
    <logger name="org.apache.shiro.session.mgt.AbstractValidatingSessionManager" level="ERROR" additivity="false">
        <appender-ref ref="SYNC_ERROR"/>
        <appender-ref ref="SYNC_STDOUT"/>
    </logger>

</configuration>